{
  "name": "vietnamese-phonetic-transcript",
  "version": "1.0.0",
  "author": "DuckyMomo20012",
  "description": "A library for converting Vietnamese text to its phonetic transcription.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DuckyMomo20012/vietnamese-phonetic-transcript.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "lint": "tsc",
    "build": "tsup",
    "test": "vitest run",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "prepublish": "pnpm run build && pnpm run check-exports && pnpm run lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.18.2",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/node": "24.3.1",
    "@typescript-eslint/eslint-plugin": "8.41.0",
    "@typescript-eslint/parser": "8.41.0",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "9.1.2",
    "eslint-import-resolver-typescript": "3.10.1",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.6",
    "prettier": "3.6.2",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
